    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug 2vyper verifying Vyper",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${workspaceFolder}/env/bin/python3",
            "program": "${workspaceFolder}/env/bin/2vyper",
            "args": [
                "--viper-jar-path", "${workspaceFolder}/viper/silicon.jar", "${file}"
            ],
            "cwd": "${workspaceFolder}",
            "env": {},
            "console": "integratedTerminal"
        },
        {
            "name": "Translate Vyper to Viper",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${workspaceFolder}/env/bin/python3",
            "program": "${workspaceFolder}/env/bin/2vyper",
            "args": [
                "--viper-jar-path", "${workspaceFolder}/viper/silicon.jar",
                "--write-silver-to-file", "${fileDirname}/${fileBasenameNoExtension}.vpr",
                "${file}"
            ],
            "cwd": "${workspaceFolder}",
            "env": {},
            "console": "integratedTerminal"
        }
    ]
}